<div class="container">
  <div class="row">
    <div class="col-10">
    <h3 class="mt-5 mb-5 text-center", style="margin-left:100px; width:200px;">新規会員登録</h3>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "layouts/error", obj: resource %>
      <div class="field row", style="margin-left:70px">
        <%= f.label "名前", class: "col-form-label col-3 mb-3" %><br />
        <%= f.label "(姓)", class: "col-form-label ml-1 mr-3" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-3 form-control", placeholder: "令和" %>
        <%= f.label "(名)", class: "col-form-label mr-3 ml-4" %>
        <%= f.text_field :first_name, class: "col-3 form-control", placeholder: "道子" %>
      </div>
    
      <div class="field row", style="margin-left:70px">
        <%= f.label "フリガナ", class: "col-form-label col-3 mb-3" %><br />
        <%= f.label "(セイ)", class: "col-form-label ml-1" %>
        <%= f.text_field :kana_last_name, class: "col-3 form-control", placeholder: "レイワ" %>
        <%= f.label "(メイ)", class: "col-form-label ml-4" %>
        <%= f.text_field :kana_first_name, class: "col-3 form-control", placeholder: "ミチコ" %>
      </div>
      
      <div class="field row", style="margin-left:70px">
        <%= f.label "メールアドレス", class: "col-form-label col-3 mb-3" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "ml-5 col-3 form-control", placeholder: "sample@example.com" %>
      </div>
      
      <div class="field row", style="margin-left:70px">
        <%= f.label "郵便番号(ハイフンなし)", class: "col-form-label col-3 mb-3" %><br />
        <%= f.text_field :postcode, autocomplete: "postcode", class: "ml-5 col-3 form-control", placeholder: "00000000" %>
      </div>
      
      <div class="field row", style="margin-left:70px">
        <%= f.label "住所", class: "col-form-label col-3 mb-3" %><br />
        <%= f.text_field :address, autocomplete: "address", class: "ml-5 col-7 form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
      
      <div class="field row", style="margin-left:70px">
        <%= f.label "電話番号(ハイフンなし)", class: "col-form-label col-3 mb-3" %><br />
        <%= f.text_field :phone_number, autocomplete: "phone_number", class: "ml-5 col-3 form-control", placeholder: "0000000000" %>
      </div>
    
      <div class="field row", style="margin-left:70px">
        <%= f.label "パスワード(6文字以上)", class: "col-form-label col-3 mb-3" %>
        
        <%= f.password_field :password, autocomplete: "new-password", class: "ml-5 col-3 form-control" %>
      </div>
    
      <div class="field row", style="margin-left:70px">
        <%= f.label "パスワード(確認用)", class: "col-form-label col-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-5 col-3 form-control" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success mt-4", style: "width:150px; margin-left:335px;" %>
      </div>
    <% end %>
    <h5 class="text-center mb-4 mt-5" style="width:270px; background-color:#d3d3d3; margin-left:100px">既に登録済みの方</h5>
    <%= render "public/shared/links" %>
   </div>
  </div>
</div>