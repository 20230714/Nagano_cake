<div class="container">
    <h2 class="text-center mr-10 mb-5 mt-5 w-25 offset-2 ", style="background-color:#d3d3d3;">配送先登録/一覧</h2>
    <div>
      <%= form_with model: @address, local:true do |f| %>
        <div class="field_row">
          <%= f.label :"郵便番号(ハイフンなし）", class:"col-4" %>
          <%= f.text_field :postcode, class:"col-5" %>
        </div>
        <div class="field-row">
          <%= f.label :"住所", class:"col-4" %>
          <%= f.text_field :address, class:"col-7" %>
        </div>
        <div class="field-row">
          <%= f.label :"宛名", class:"col-4" %>
          <%= f.text_field :name, class:"col-4" %>
          <%= f.submit '登録する' ,class: "col-3 btn-success " %>
        </div>
      <% end %>

      <div class="create">
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @addresses.each do |address| %>
                <tr>
                  <td>
                    <%= address.postcode %>
                  </td>
                  <td>
                    <%= address.address %>
                  </td>
                  <td>
                    <%= address.name %>
                  </td>
                  <td>
                    <%= link_to "編集する", edit_address_path(address), class: "btn btn-primary" %>
                  </td>
                  <td>
                    <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

      </div>
   </div>
</div>
