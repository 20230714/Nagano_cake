<div class="container">
    <h2 class="text-center mr-10 mb-5 mt-5 w-25 offset-2 ", style="background-color:#d3d3d3;">配送先編集</h2>
    <div>
      <%= form_with model: @address, local:true do |f| %>
        <div class="field_row">
          <%= f.label :"郵便番号(ハイフンなし）", class:"col-4" %>
          <%= f.text_field :postcode, class:"col-5" %>
        </div>
        <div class="field-row">
          <%= f.label :"住所", class:"col-4" %>
          <%= f.text_field :address, class:"col-7" %>
        </div>
        <div class="field-row">
          <%= f.label :"宛名", class:"col-4" %>
          <%= f.text_field :name, class:"col-4" %>
          <%= f.submit '変更内容を保存' ,class: "col-3 btn-success " %>
        </div>
      <% end %>