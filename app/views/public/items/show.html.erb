<div class="container">
  <div class="row">
    <div class="col-2 ml-4">
      <%= render 'public/homes/genre_search', genres: @genres %>
    </div>
    <div class="col-3 offset-md-1">
      <div class="mt-5"><%= image_tag @item.image, size: "300x200" %></div>
    </div>
    <div class="col-3 offset-md-1">
      <%= form_with model: @cart_item do |f| %>
      <table class="table table-borderless mt-5">
        <tr>
          <th colspan="2"><h3><%= @item.name %></h3></th>
        </tr>
        <tr>
          <td colspan="2"><%= @item.description %></td>
        </tr>
        <tr>
          <td colspan="2"><h4 class="mr-1 d-inline-block">¥<%= @item.add_tax_price.to_s(:delimited) %></h4><p class="d-inline-block">(税込)</p></td>
        </tr>
        <tr>
          <td><%= f.select :quantity, *[1..20], include_blank: "個数選択"%></td>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <td><%= f.submit "カートに入れる", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>