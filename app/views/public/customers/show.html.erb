<div class="container">
  <div class="row">
   <div class="col-10 mx-auto">
     <h3 class="my-5 ml-5">マイページ</h3>
     <h5 class="d-inline-block">登録情報</h5>
      <p class="d-inline-block"><%= link_to "編集する",edit_customer_path, class:"btn btn-success ml-4" %></p>
      <table class="table">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.kana_full_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex">
        <h5 style="margin-right: 40px">配送先</h5><p><%= link_to "一覧を見る",addresses_path, class:"btn btn-primary"%></p>
      </div>
      <div class="d-flex">
        <h5 style="margin-right: 20px">注文履歴</h5> <p><%= link_to "一覧を見る", orders_path,class:"btn btn-primary"%></p>
      </div>
   </div>
  </div>
</div>