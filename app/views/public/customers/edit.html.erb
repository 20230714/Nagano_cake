<div class="container">
  <h2 class="text-center mr-10 mb-5 mt-5 w-25 offset-2 ", style="background-color:#d3d3d3;">会員情報編集</h2>
    <div class="row">
      <%= form_with model: @customer, local:true do |f| %>
        <div class="field-row">
          <%= f.label :"氏名", class:"col-4" %>
          <%= f.text_field :last_name, class:"col-3" %>
          <%= f.text_field :first_name, class:"col-3 offset-1" %>
        </div>
        <div class="field-row">
          <%= f.label :"フリガナ", class:"col-4" %>
          <%= f.text_field :kana_last_name, class:"col-3" %>
          <%= f.text_field :kana_first_name, class:"col-3 offset-1" %>
        </div>
        <div class="field-row">
          <%= f.label :"郵便番号", class:"col-4" %>
          <%= f.text_field :postcode, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"住所", class:"col-4" %>
          <%= f.text_field :address, class:"col-7" %>
        </div>
        <div class="field-row">
          <%= f.label :"電話番号", class:"col-4" %>
          <%= f.text_field :phone_number, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"メールアドレス", class:"col-4" %>
          <%= f.text_field :email, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"　", class:"col-4" %>
          <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          <%= link_to "退会する", customers_check_customers_path,class:"btn btn-danger ml-5"%>
        </div>
      <% end %>
    </div>

</div>