<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center mb-5 mt-5 w-25", style="background-color:#d3d3d3;">注文履歴詳細</h3>
    </div>

    <div class="col-8">

　　　<h5><strong>注文情報</strong></h5>
      <table class='table table-bordered'>
          <tr><th style="background-color:#d3d3d3;">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
          <tr><th style="background-color:#d3d3d3;">配送先</th>
          <td>
            <%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
          </tr>
          <tr><th style="background-color:#d3d3d3;">支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
          <tr><th style="background-color:#d3d3d3;">ステータス</th><td><%= @order.status %></td></tr>
      </table>
    </div>

    <div class="col-4 mt-4">
      <h5><strong>請求情報</strong></h5>
      <table class='table table-bordered'>
          <tr><th style="background-color:#d3d3d3;">商品合計</th><td><%= @total.to_s(:delimited, delimiter: ',') %></td></tr>
          <tr><th style="background-color:#d3d3d3;">送料</th><td><%= @order.postage %></td></tr>
          <tr><th style="background-color:#d3d3d3;">ご請求額</th><td><%= @order.billing_amount.to_s(:delimited, delimiter: ',')%></td></tr>
      </table>
    </div>

    <h5><strong>注文内容</strong></h5>
      <table class='table'>
        <thead style="background-color:#d3d3d3;">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.subtotal.to_s(:delimited, delimiter: ',') %></td>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
