<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center mb-5 mt-5 w-25", style="background-color:#d3d3d3;">注文履歴一覧</h3>

  <% if @orders.present? %>
      <table class='table'>
        <thead style="background-color:#d3d3d3;">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= order.postcode %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td></td>
          <td><%= @order.order_total.to_s(:delimited, delimiter: ',') %></td>
          <td><%= order.status %></td>
          <td><%= link_to "注文詳細", order_path(order), class: "btn btn-success" %></td>
        </tbody>
        <% end %>
      </table>
  <% else %>
    <h4>注文履歴がありません。<h4>
  <% end %>
    </div>
  </div>
</div>
