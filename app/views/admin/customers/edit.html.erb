<div class="container">
  <h2 class="my-5", style="background-color:#d3d3d3;"><!--%= full_name(@customer) %-->さんの会員情報編集</h2>
    <div class="row col-12">
      <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
        <div class="field-row">
          <%= f.label :"会員ID", class:"col-4" %>
          <!--%= f.label :@customer.id %-->
        </div>
        <div class="field-row">
          <%= f.label :"氏名", class:"col-4" %>
          <%= f.text_field :last_name, class:"col-3" %>
          <%= f.text_field :first_name, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"フリガナ", class:"col-4" %>
          <%= f.text_field :kana_last_name, class:"col-3" %>
          <%= f.text_field :kana_first_name, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"郵便番号", class:"col-4" %>
          <%= f.text_field :postal_code, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"住所", class:"col-4" %>
          <%= f.text_field :address, class:"col-7" %>
        </div>
        <div class="field-row">
          <%= f.label :"電話番号", class:"col-4" %>
          <%= f.text_field :phone_number, class:"col-3" %>
        </div>
        <div class="field-row">
          <%= f.label :"メールアドレス", class:"col-4" %>
          <%= f.text_field :email, class:"col-3" %>
        </div>
        <div class="form-group">
          <%= f.label :"会員ステータス", class:"col-4" %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効" %>  
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会" %>
        </div>
        <div class="form-group col-11 d-flex justify-content-around">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
          <!--public後会員IDの反映を確認する-->
        </div>

        
        
      <% end %>
    </div>
    
</div>