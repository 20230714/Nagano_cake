<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h3 class="text-center mb-4 mt-5", style="margin-left:50px; width:230px; background-color:#d3d3d3;">商品編集</h3>
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <div class="form-group">
          <%= f.label :商品画像, style: "margin-right:60px;" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :商品名, style: "margin-right:75px;" %>
          <%= f.text_field :name, placeholder: "商品名" %>
        </div>
        <div class="form-group">
          <%= f.label :商品説明, style: "margin-right:60px;", class: 'align-top' %>
          <%= f.text_area :description, placeholder: "ここに説明文を記述します", size: "30x5" %>
        </div>
        <div class="form-group">
          <%= f.label :ジャンル, style: "margin-right:60px;" %>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: "選択してください" %>
        </div>
        <div class="form-group">
          <%= f.label :税抜価格, style: "margin-right:60px;" %>
          <%= f.number_field :price, placeholder: "1000" %>円
        </div>
        <div class="form-group d-flex">
          <%= f.label :販売ステータス %>
        <div class="ml-3">
          <%= f.radio_button :is_sold_out, "false" %>
          <%= f.label :is_sold_out_false, "販売中" %>
        </div>
        <div class="ml-3">
          <%= f.radio_button :is_sold_out, "true" %>
          <%= f.label :is_sold_out_true, "販売停止中" %>
        </div>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success rounded text-white" , style: "margin-left:200px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>