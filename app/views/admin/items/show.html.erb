<div class="container">
  <h3 class="text-center mt-5", style="margin-left:50px; width:200px; background-color:#d3d3d3;">商品詳細</h3>
  <div class="row">
    <div class="col-4 ml-5 mt-5">
      <%= image_tag @item.image, size: "300x200"%>
    </div>
    <div class="col-7 mt-5">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格(税抜価格)</th>
          <td><%= @item.add_tax_price %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <% if @item.is_sold_out %>
            <td class="text-danger">販売停止中</td>
          <% else %>
            <td class="text-success">販売中</td>
          <% end %>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success rounded text-white" %>
    </div>
  </div>
</div>