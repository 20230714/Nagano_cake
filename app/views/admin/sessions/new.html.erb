<div class="container">
  <h3 class="mt-5">管理者ログイン</h3>
  <div class="row">
    <div class="col-8 mx-auto mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <%= f.label "メールアドレス", class: "col-form-label col-3 mb-4" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-9 form-control", placeholder: "sample@example.com" %>
        </div>
        <div class="row">
          <%= f.label "パスワード", class: "col-form-label col-3" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-9 form-control" %>
        </div>
        <div class="row">
          <%= f.submit "ログイン", class: "btn btn-primary mt-5", style: "width:150px; margin:190px;" %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
