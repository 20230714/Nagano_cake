<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h3 class="text-cetner my-5", style="margin:auto; width:200px;">注文履歴一覧</h3>
      <table class='table'>
        <thead style="background-color:#d3d3d3;">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <th>
            <%= link_to admin_order_path(order) do%>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            <% end %>
          </th>
          <th><%= full_name(order.customer) %></th>
          <th><%= order.order_details.count %></th>
          <th><%= order.status %></th>
          <% end %>
        </tbody>
      </table>

      <div class="d-flex justify-content-center"><%= paginate @orders, theme: 'twitter-bootstrap-4' %></div>

    </div>
  </div>
</div>
