<div class="container">
  <div class="row justify-content-center">
    <div class= "col-10">
      <h3 class="text-cetner my-5", style="margin:auto; width:200px;">注文履歴一覧</h3>
      <table class='table'>
        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
      <% @orders.each do |order| %>
        <tbody>
          <th>
            <%= link_to admin_order_path(order) do%>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            <% end %>
          </th>
          <th><%= order.name %></th>
          <th><%= order.order_details.ordertotal %></th>
          <th><%= order.status %></th>
        </tbody>
      <% end %>
      </table>

      <div class="d-flex justify-content-center"><%= paginate @orders, theme: 'twitter-bootstrap-4' %></div>

    </div>
  </div>
</div>
